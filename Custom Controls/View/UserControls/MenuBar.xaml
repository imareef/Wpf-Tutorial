<UserControl
    x:Class="Custom_Controls.View.UserControls.MenuBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Custom_Controls.View.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="70"
    d:DesignWidth="800"
    mc:Ignorable="d">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem FontSize="16" Header="File">
                <MenuItem FontSize="16" Header="Exit" />
            </MenuItem>
            <MenuItem FontSize="16" Header="Edit" />
        </Menu>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Button Width="50" Margin="5" />
            <TextBox
                Grid.Column="1"
                Width="150"
                Margin="5" />

        </Grid>

    </Grid>


</UserControl>

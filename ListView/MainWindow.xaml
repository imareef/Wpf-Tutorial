<Window
    x:Class="ListView.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ListView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="400"
    Height="400"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBox
            Name="tbEntry"
            Width="180"
            Height="35"
            FontSize="16" />

        <StackPanel
            Grid.Column="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Orientation="Horizontal">

            <Button
                Name="btnAdd"
                Grid.Column="1"
                Width="50"
                Height="30"
                Margin="2"
                Click="btnAdd_Click"
                Content="Add" />

            <Button
                Name="btnDelete"
                Grid.Column="1"
                Width="50"
                Height="30"
                Margin="2"
                Click="btnDelete_Click"
                Content="Delete" />

            <Button
                Name="btnClear"
                Grid.Column="1"
                Width="50"
                Height="30"
                Margin="2"
                Click="btnClear_Click"
                Content="Clear" />

        </StackPanel>


        <ListView
            Name="lvEntries"
            Grid.Row="1"
            Grid.ColumnSpan="2" />

    </Grid>
</Window>

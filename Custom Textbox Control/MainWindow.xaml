<Window
    x:Class="Custom_Textbox_Control.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UserControls="clr-namespace:Custom_Textbox_Control.View.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Custom_Textbox_Control"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="300"
    Height="400"
    mc:Ignorable="d">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <UserControls:CleareableTextBox
            Grid.Row="1"
            Width="250"
            Height="40"
            PlaceHolder="First Name" />

        <UserControls:CleareableTextBox
            Grid.Row="2"
            Width="250"
            Height="40" 
            PlaceHolder="Last Name"/>

        <UserControls:CleareableTextBox
            Grid.Row="3"
            Width="250"
            Height="40" 
            PlaceHolder="Email"/>

    </Grid>
</Window>
